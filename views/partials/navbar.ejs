<div class="navbar">
  <% function formatDateWithoutYear(date) { const days = ['Sun', 'Mon', 'Tue',
  'Wed', 'Thu', 'Fri', 'Sat']; const dayName = days[date.getDay()]; const months
  = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct',
  'Nov', 'Dec']; const monthName = months[date.getMonth()]; const day =
  String(date.getDate()).padStart(2, '0'); return `${dayName}, ${monthName}
  ${day}`; } const today = new Date(); const now = formatDateWithoutYear(today)
  %>
  <a href="/" class="nav-logo-div"><img src="/images/navbar-logo.png" /></a>
  <% if(!locals.user) { %>
  <div class="nav-time-div">
    <a href="/" class="nav-home"
      ><img
        src="data:image/svg+xml;base64,"
    /></a>

    <div class="nav-time"><%= now %></div>
  </div>
  <div class="nav-auth-div">
    <div class="nav-login"><a href="/user/login">Login</a></div>
    <a
      class="nav-signup <%= locals.url==='/signup' && selected%>"
      href="/user/signup"
    >
      <div>Sign up</div>
    </a>
  </div>
  <% } %> <% if(locals.user) { %>
  <div class="nav-time-div">
    <a class="nav-home"
      ><img
        src="data:image/svg+xml;base64,"
      /><span
        >&nbsp; hey <%=
        locals.user.fullName.length<9?locals.user.fullName:locals.user.fullName.slice(0,7)+'..'
        %>&nbsp;</span
      ></a
    >
    <div class="nav-time"><%= now %></div>
    <div class="nav-menu-div fixed-center">
      <% const selected='nav-selected'; const appear = 'fixed-right' %> <%
      if(locals.user.role==='STUDENT') { %>
      <a
        class="<%= locals.url==='/discover' && selected%>"
        href="/events/discover"
        >Discover</a
      >
      <a class="<%= locals.url==='/dashboard' && selected%>" href="/dashboard"
        >Dashboard</a
      >
      <% } %> <% if(locals.user.role==='ADMIN') { %>
      <a
        class="<%= locals.url==='/discover' && selected%>"
        href="/events/discover"
        >Manage</a
      >
      <a
        class="<%= locals.url==='/history' && selected%>"
        href="/events/history"
        >History</a
      >
      <a
        class="disappear <%= (locals.url==='/' || locals.url==='/discover' || locals.url==='/history')&& appear%>"
        href="/admin/create-event"
      >
        <div>
          <img
            src="data:image/svg+xml;base64,"
          />
        </div>
      </a>
      <% } %>
    </div>
  </div>
  <div class="nav-auth-div">
    <a class="nav-signup" href="/user/logout">
      <div>Logout</div>
    </a>
  </div>

  <% } %>
</div>
